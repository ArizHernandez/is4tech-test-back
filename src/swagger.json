{
  "openapi": "3.0.0",
  "info": {
    "title": "is4tech-api",
    "description": "Api for is4tech-test",
    "version": "1.0.0"
  },
  "produces": ["application/json"],
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local server"
    }
  ],
  "components": {
    "schemas": {
      "error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },

      "distributor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email_notificate": {
            "type": "string"
          },
          "email_alert": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },

      "distributorBody": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "required": true
          },
          "name": {
            "type": "string",
            "required": true
          },
          "email_notificate": {
            "type": "string",
            "required": true
          },
          "email_alert": {
            "type": "string",
            "required": true
          }
        }
      },

      "product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "distributor_id": {
            "type": "integer",
            "format": "int64"
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },

      "productBody": {
        "type": "object",
        "properties": {
          "distributor_id": {
            "type": "integer",
            "format": "int64",
            "required": true
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number",
            "format": "double",
            "required": true
          }
        }
      }
    }
  },
  "paths": {
    "/distributors": {
      "get": {
        "tags": ["distributor"],
        "summary": "List all distributors",
        "description": "List all distributors",
        "operationId": "getDistributors",
        "responses": {
          "200": {
            "description": "A list of distributors",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/distributor"
                  }
                }
              }
            }
          }
        }
      },

      "post": {
        "tags": ["distributor"],
        "summary": "Create a new distributor",
        "description": "Create a new distributor",
        "operationId": "createDistributor",
        "requestBody": {
          "description": "Distributor to create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/distributorBody"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Distributor created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/distributor"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/distributors/:id": {
      "get": {
        "tags": ["distributor"],
        "summary": "Get a distributor",
        "description": "Get a distributor",
        "operationId": "getDistributor",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of distributor to return",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Distributor found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/distributor"
                }
              }
            }
          },
          "404": {
            "description": "Distributor not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },

      "put": {
        "tags": ["distributor"],
        "summary": "Update a distributor",
        "description": "Update a distributor",
        "operationId": "updateDistributor",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/distributorBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Distributor created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/distributor"
                }
              }
            }
          }
        }
      },

      "delete": {
        "tags": ["distributor"],
        "summary": "Delete a distributor",
        "description": "Delete a distributor",
        "operationId": "deleteDistributor",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of distributor to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Distributor deleted"
          },
          "404": {
            "description": "Distributor not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["products"],
        "summary": "Get All products",
        "description": "Get all products in an array",
        "operationId": "getProducts",
        "responses": {
          "200": {
            "description": "products response success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "id": {
                      "type": "integer",
                      "format": "int64"
                    },
                    "$ref": "#/components/schemas/product"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },

      "post": {
        "tags": ["products"],
        "summary": "Create a product",
        "description": "Create a product",
        "operationId": "createProduct",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/productBody"
              }
            }
          },
          "description": "Product object that needs to be added"
        },
        "responses": {
          "201": {
            "description": "Product created",
            "content": {
              "application/json": {
                "schema": {
                  "id": {
                    "type": "integer",
                    "format": "int64"
                  },
                  "$ref": "#/components/schemas/product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid product supplied",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "products/:id": {
      "get": {
        "tags": ["products"],
        "summary": "Get a product",
        "description": "Get a product",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of product to return",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product"
                }
              }
            }
          },
          "404": {
            "description": "Product not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["products"],
        "summary": "Update a product",
        "description": "Update a product",
        "operationId": "updateProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of product that needs to be updated",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/productBody"
              }
            }
          },
          "description": "Updated product object"
        },
        "responses": {
          "200": {
            "description": "Product updated",
            "content": {
              "application/json": {
                "schema": {
                  "id": {
                    "type": "integer",
                    "format": "int64"
                  },
                  "$ref": "#/components/schemas/product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid product supplied",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "404": {
            "description": "Product not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },

      "delete": {
        "tags": ["products"],
        "summary": "Delete a product",
        "description": "Delete a product",
        "operationId": "deleteProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of product that needs to be deleted",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product deleted"
          },
          "404": {
            "description": "Product not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    }
  }
}
